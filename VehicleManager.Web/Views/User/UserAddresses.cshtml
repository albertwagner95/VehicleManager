@model IEnumerable<VehicleManager.Application.ViewModels.UserModels.UserAdressesForListVm>

@{
    ViewData["Title"] = "UserAddresses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>UserAddresses</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KindOfAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KindOfAddress)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Usuń", "Delete", "Address", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
