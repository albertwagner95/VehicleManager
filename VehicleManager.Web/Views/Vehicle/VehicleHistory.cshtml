@model VehicleManager.Application.ViewModels.Vehicle.ListCarHistoryForListVm

@{
    ViewData["Title"] = "VehicleHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.23/css/dataTables.bootstrap4.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.6.5/css/buttons.bootstrap4.min.css" />
<h2 class="text-center">Historia zdarzeń</h2>
<hr />
@{
    var tmpData = TempData["emptyCarHistory"];
    var tmpDataScs = TempData["refuellingSuccessfullyOrNotAdded"];
    var deleteOperation = TempData["deleteOperation"];

    if (tmpData != null || tmpDataScs != null || deleteOperation != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <strong>
                @tmpData
                @tmpDataScs
                @deleteOperation
            </strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
}
<hr />
<form asp-action="VehicleHistory" method="get" class="form-inline">
    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
        <div class="form-group row">
            <label asp-for="VehicleId" class="col-sm-2 col-form-label">Wybierz pojazd</label>
            <div class="col-sm-4">
                <select asp-for="VehicleId" asp-items="@(new SelectList(Model.UserCars.UserCars,"Id", "Name"))" class="custom-select">
                    <option value="">Wybierz pojazd</option>
                </select>
            </div>
            <span asp-validation-for="VehicleId" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" value="Filtruj" class="btn btn-primary">Filtruj</button>
</form>
@Html.ActionLink("Resetuj filtr", "VehicleHistory","Vehicle",null, new {@class = "btn btn-primary" })
<hr />
<table id="example" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nazwa")
            </th>
            <th>
                @Html.DisplayName("Data zdarzenia")
            </th>
            <th>
                @Html.DisplayName("Przebieg") (Km)
            </th>
            <th>
                @Html.DisplayName("Koszt operacji") (PLN)
            </th>
            <th>
                Opcje
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.CarHistoryList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MeterStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RefuelingPrice)
                </td>
                <td>
                    @Html.ActionLink("Sczegóły", "EventDetails", "Vehicle", new { id = item.RefulingRef }, new { @class = "btn btn-outline-dark" })

                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-outline-dark" data-toggle="modal" data-target="#exampleModalCenter">
                        Usuń zdarzenie
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Czy na pewno chcesz usunąć @item.Name z dnia @item.EventDate
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-outline-dark" data-dismiss="modal">Close</button>
                                    @Html.ActionLink("Usuń zdarzenie", "DeleteEvent", "Vehicle", new { eventId = item.RefulingRef }, new { @class = "btn  btn-outline-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>

